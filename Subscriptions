import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner s = new Scanner(System.in);
		int t = s.nextInt();
		
		while(t-- > 0){
		    
		    int n = s.nextInt();
		    int cost = s.nextInt();
		    
		    int size = (n + 5)/6;//ceiling division
		    System.out.println(size*cost);
		}
		

	}
}
